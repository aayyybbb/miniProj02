<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosa.hello.miniproj02.board.mapper.BoardMapper">

    <select id="getBoardList" resultType="org.kosa.hello.miniproj02.entity.BoardVO">
        select
            b.board_id,
            b.title,
            u.user_id as writer,
            b.created_at
        from
            board b
        join user u
        on b.user_id = u.user_id
    </select>

    <insert id="boardInsert" parameterType="org.kosa.hello.miniproj02.entity.BoardVO" useGeneratedKeys="true" keyColumn="board_id" keyProperty="board_id">
        insert into board
        (user_id,title,content)
        values
        (#{writer}, #{title}, #{content})
    </insert>

    <select id="boardRead" resultType="org.kosa.hello.miniproj02.entity.BoardVO">
        select
            *
        from
            board
        where
            board_id = #{board_id}
    </select>

    <select id="boardDetailRead" resultType="org.kosa.hello.miniproj02.entity.BoardVO">
        select
            b.*, u.user_id as writer, f.file_id, f.file_origin_name
        from
            board b
        join user u on b.user_id = u.user_id
        join file f on f.board_id = b.board_id
        where
            b.board_id = #{board_id}
        and
            f.file_type = "attached"
    </select>

</mapper>